<h1>Fire Nation</h1>

<p>Members in Fire Nation: <%= @airbenders.count %></p>

<section class="airbenders">
  <% @airbenders.each do |airbender| %>
    <section class="airbender">

    <h2 class="airbender-name"><%= airbender.name %></h2>
    <%= image_tag "#{airbender.photo_url}" %>

    <h4>Allies:</h4>
    <% airbender.allies.each do |ally| %>
      <p><%= ally %></p>
    <% end %>

    <h4>Enemies:</h4>
    <% airbender.enemies.each do |enemy| %>
      <p><%= enemy %></p>
    <% end %>

    <h4>Affiliations:</h4> 
    <p><%= airbender.affiliation %></p>
    </section>
  <% end %>
</section>